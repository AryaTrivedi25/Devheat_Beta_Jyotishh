<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>page</title>
    <link rel="stylesheet" href="/static/css/page.css">
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous">
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"></script>

  </head>
  <body class="back-bg">
    <nav class="navbar my-nav navbar-dark sticky-top ">
      <div class="container-fluid">
        <a class="navbar-brand" href="#"><img src="/static/css/images/logo.svg" alt></a>
        <button class="navbar-toggler nav-botton" type="button"
          data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar"
          aria-controls="offcanvasDarkNavbar" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1"
          id="offcanvasDarkNavbar"
          aria-labelledby="offcanvasDarkNavbarLabel">
          <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel">Settings</h5>
            <button type="button" class="btn-close btn-close-white"
              data-bs-dismiss="offcanvas"
              aria-label="Close"></button>
          </div>
          <div class="offcanvas-body">
            <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="./">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" onclick="sendToken(`../user/profile`)">My profile</a>
              </li>
            </ul>
            <form class="d-flex mt-3" action="/search" method="post" role="search">
              <input class="form-control me-2" type="text" placeholder="Search"
                aria-label="Search">
              <button class="btn btn-dark" type="submit">Search</button>
            </form>
          </div>
        </div>
      </div>
    </nav>

    <div class="container text-center">
      <div class="row">
        <div class="col-md-4 col-12  card-bg">
          <div class="top-card">
            <img
              src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/dream-world/<%= data.id %>.svg"
              alt="animal" class="card-img">
          </div>
          <div class="bottom-card">
            <div class="name-like">
              <h2><%= data.name %></h2>
              <my-button>
                <form onclick="sendToken(`./user/<%= data.id %>-<%= data.name %>/favourites`)"><span>Add to favourites</span></form>
              </my-button>
            </div>
            <div class="mini-det">
              <h5>Type:</h5>
              <% for( let i = 0; i < data.types.length; i++ ) { %>
              <h5 class="space-paading"><%= data.types[i].type.name %></h5>
              <% } %>
            </div>
            <div class="mini-det">
              <h5>Height:</h5><h5><%= data.height %></h5>
            </div>
            <div class="mini-det">
              <h5>Weight:</h5><h5><%= data.weight %></h5><h5>lbs</h5>
            </div>
            <div class="mini-det">
              <h5>Evolve:</h5><h5> Level </h5><h5>16</h5>
            </div>

          </div>

        </div>
        <div class="col-md-8 col-12 card-bg2">
          <div class="row">
            <div class="col-12">
              <h3>Stats</h3>
            </div>
          </div>
          <div class="row">

            <% for( let id = 0; id < data.stats.length; id++ ) { %>
            <div class="col-12 col-sm-6">
              <div class="my-progress">
                <div class="my-prog">
                  <h6><%= data.stats[id].stat.name %></h6>
                  <h6><%= data.stats[id].base_stat %></h6>
                </div>
                <div class="progress" role="progressbar"
                  aria-label="Example with label" aria-valuenow="25"
                  aria-valuemin="0" aria-valuemax="100">
                  <div class="progress-bar bg-black"
                    style="width: <%= data.stats[id].base_stat * 0.3921 %>%"></div>
                </div>
              </div>
            </div>
            <% } %>
          </div>
          <div class="row my-row">

            <div class="col-12">
              <h3>Moveset</h3>
            </div>
          </div>
          <div class="row moveset">

            <% for( let id = 0; id < data.moves.length; id++ ) { %>
            <div class="col-4 col-md-2">
              <div class="my-move">
                <h6><%= data.moves[id].move.name %></h6>
              </div>
            </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </body>
  <script src="/static/js/token.js"></script>
</html>